# using EJUDGE_FLAGS we may pass additional flags

LANG_CONFIG_DIR="@lang_config_dir@"
[ "${EJUDGE_LANG_CONFIG}" = "" ] && EJUDGE_LANG_CONFIG="${LANG_CONFIG_DIR}/clang++-32.cfg"

if [ -f "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  version="unknown"
  CLANGRUN="clang++"
  CLANGDIR=
fi

if [ x"${version}" = x ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"${CLANGDIR}" != x ]
then
    PATH="${CLANGDIR}:${PATH}"
fi

if [ "${EJUDGE_BUILD_SCRIPT}" != "" ]
then
    export EJUDGE_LANGUAGE="clang++-32"
    export EJUDGE_COMPILER="${CLANGRUN}"
    exec "${EJUDGE_BUILD_SCRIPT}" $@
fi

if [ "${EJUDGE_OPT_BUILD_SCRIPT}" != "" -a -x "${EJUDGE_OPT_BUILD_SCRIPT}" ]
then
    export EJUDGE_LANGUAGE="clang++-32"
    export EJUDGE_COMPILER="${CLANGRUN}"
    exec "${EJUDGE_OPT_BUILD_SCRIPT}" $@
fi

[ x"${EJUDGE_FLAGS}" = x ] && EJUDGE_FLAGS="-O2"

unset LANG
unset LC_ALL
unset LC_MESSAGES
unset LANGUAGE

if [ "${EJUDGE_SOLUTION_FILE}" != "" ]
then
    if ! mv "$1" "${EJUDGE_SOLUTION_FILE}.cpp"
    then
        echo "failed to rename ${1} to ${EJUDGE_SOLUTION_FILE}.cpp" >&2
        exit 1
    fi
    exec "${CLANGRUN}" -m32 ${EJUDGE_FLAGS} *.cpp -o "$2" ${EJUDGE_LIBS}
fi

exec "${CLANGRUN}" -m32 ${EJUDGE_FLAGS} "$1" -o "$2" ${EJUDGE_LIBS}
