# using EJUDGE_FLAGS we may pass additional flags

LANG_CONFIG_DIR="@lang_config_dir@"
[ "${EJUDGE_LANG_CONFIG}" = "" ] && EJUDGE_LANG_CONFIG="${LANG_CONFIG_DIR}/clang.cfg"

if [ -f "${EJUDGE_LANG_CONFIG}" ]
then
  . "${EJUDGE_LANG_CONFIG}"
else
  version="unknown"
  CLANGRUN="clang"
  CLANGDIR=
fi

if [ x"${version}" = x ]
then
  echo "This language is not supported." >&2
  exit 1
fi

if [ x"${CLANGDIR}" != x ]
then
    PATH="${CLANGDIR}:${PATH}"
fi

if [ "${EJUDGE_BUILD_SCRIPT}" != "" ]
then
    export EJUDGE_LANGUAGE="clang"
    export EJUDGE_COMPILER="${CLANGRUN}"
    exec "${EJUDGE_BUILD_SCRIPT}" $@
fi

[ x"${EJUDGE_FLAGS}" = x ] && EJUDGE_FLAGS="-O2"
[ x"${EJUDGE_LIBS}" = x ] && EJUDGE_LIBS="-lm"

unset LANG
unset LC_ALL
unset LC_MESSAGES
unset LANGUAGE

if [ "${EJUDGE_SOLUTION_FILE}" != "" ]
then
    if ! mv "$1" "${EJUDGE_SOLUTION_FILE}.c"
    then
        echo "failed to rename ${1} to ${EJUDGE_SOLUTION_FILE}.c" >&2
        exit 1
    fi
    exec "${CLANGRUN}" ${EJUDGE_FLAGS} *.c -o "$2" ${EJUDGE_LIBS}
fi

exec "${CLANGRUN}" ${EJUDGE_FLAGS} "$1" -o "$2" ${EJUDGE_LIBS}
